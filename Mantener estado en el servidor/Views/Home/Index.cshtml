<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <p>
                <label>Contador -cookie- actualizado: @ViewBag.contador</label>
            </p>

            <p>
                <label>Haces click y se manda para que el view lo lea (@Request.Cookies["contador"].Value): </label>
                <input type="submit" value="+1" />
            </p>
        }
    </div>
</body>
</html>
